@using serwis_web.Components
@using serwis_web.Services
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<BootstrapBlazorRoot>
    <MudThemeProvider Theme="_serwis24Theme" @rendermode="InteractiveServer"/>
    <MudPopoverProvider @rendermode="InteractiveServer"/>
    <div class="layout-container">
        <div class="navbar-topbar">
            <TopNavMenu/>
        </div>
        <div class="navbar-leftbar">
            <LeftNavMenu/>
            <div class="body-content">
                @Body
            </div>
        </div>
        <footer class="footer">
            <div class="footer-content">
                <MudText Typo="Typo.caption">
                    &copy; @DateTime.Now.Year Serwis24. Wszelkie prawa zastrzeżone. |
                    <a href="https://p.lodz.pl" target="_blank" class="footer-link">Politechnika Łódzka</a>
                </MudText>
            </div>
        </footer>
    </div>
    <MudSnackbarProvider @rendermode="InteractiveServer"/>
    <MudDialogProvider @rendermode="InteractiveServer"/>
</BootstrapBlazorRoot>

@code{
    readonly MudTheme _serwis24Theme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = DesignSystem.Tokens.Colors.Primary,
        },
    };
}

<style>
    .layout-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .body-content {
        flex: 1;
    }

    .footer {
        padding: 1rem 0;
        margin-top: auto;
        width: 100%;
        background-color: #f5f5f5;
        border-top: 1px solid #e0e0e0;
        text-align: center;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .footer-link {
        color: #1E88E5; /* Direct color value instead of CSS variable */
        text-decoration: none;
    }

    .footer-link:hover {
        text-decoration: underline;
    }

    .help-button-container {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 100;
    }
</style>