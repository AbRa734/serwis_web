@page "/bank/metody-platnosci"
@rendermode InteractiveServer
@using ApiService
@using ApiService.Models
@using serwis_web.Components
@using Colors = DesignSystem.Tokens.Colors
@using Size = MudBlazor.Size
@inject ISnackbar Snackbar
@inject ApiService ApiService
@inject IDialogService DialogService

<PageTitle>Metody płatności</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudCard Elevation="3" Class="mb-4">
        <MudCardHeader>
            <MudText Typo="Typo.h5">Metody płatności</MudText>
            <MudSpacer />
            <MudButton Variant="Variant.Filled" Style="@($"background-color: {Colors.Primary}; color: {Colors.White}")"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="@(() => OpenDialog(new DicMetodaPlatnosciDto()))">Dodaj metodę</MudButton>
        </MudCardHeader>
    </MudCard>

    <MudTable Items="@_metodyPlatnosci" Hover="true" Loading="@_loading"
              LoadingProgressColor="@MudBlazor.Color.Info" Style="@($"--mud-palette-primary: {Colors.Primary}")"
              Filter="new Func<DicMetodaPlatnosci,bool>(FilterFunc)">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista metod płatności</MudText>
            <MudSpacer />
            <MudTextField @bind-Value="_searchString" Placeholder="Szukaj" Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"
                          Immediate="true" OnDebounceIntervalElapsed="StateHasChanged"></MudTextField>
        </ToolBarContent>
        <HeaderContent>
            <MudTh><MudTableSortLabel SortBy="new Func<DicMetodaPlatnosci, object>(x => x.MetodaPlatnosciId)">ID</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<DicMetodaPlatnosci, object>(x => x.Nazwa)">Nazwa</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<DicMetodaPlatnosci, object?>(x => x.Opis)">Opis</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<DicMetodaPlatnosci, object>(x => x.DataDodania)">Data utworzenia</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<DicMetodaPlatnosci, object?>(x => x.DataAktualizacji)">Aktualizacja</MudTableSortLabel></MudTh>
            <MudTh>Akcje</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="ID">@context.MetodaPlatnosciId</MudTd>
            <MudTd DataLabel="Nazwa">@context.Nazwa</MudTd>
            <MudTd DataLabel="Opis">@context.Opis</MudTd>
            <MudTd DataLabel="Data utworzenia">@context.DataDodania.ToString("dd/MM/yyyy")</MudTd>
            <MudTd DataLabel="Aktualizacja">@(context.DataAktualizacji?.ToString("dd/MM/yyyy") ?? "-")</MudTd>
            <MudTd>
                <MudButtonGroup Size="Size.Small" Variant="Variant.Outlined">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Style="@($"color: {Colors.Primary}")"
                                   OnClick="@(() => OpenDialog(MapToDto(context)))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Style="@($"color: {Colors.DarkGray}")"
                                   OnClick="@(() => DeleteConfirm(context.MetodaPlatnosciId))" />
                </MudButtonGroup>
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager RowsPerPageString="Wierszy na stronę" InfoFormat="{first_item}-{last_item} z {all_items}" />
        </PagerContent>
        <NoRecordsContent>
            <MudText>Nie znaleziono metod płatności</MudText>
        </NoRecordsContent>
    </MudTable>
</MudContainer>

@code {
    private List<DicMetodaPlatnosci> _metodyPlatnosci = new();
    private string _searchString = "";
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        _loading = true;
        StateHasChanged();
        var result = await ApiService.MetodyPlatnosciRepo.MetodyPlatnosciGet();
        if (result.Data != null)
        {
            _metodyPlatnosci = result.Data;
        }
        else
        {
            Snackbar.Add("Błąd podczas pobierania danych: " + result.Error, Severity.Error);
        }
        _loading = false;
        StateHasChanged();
    }

    private bool FilterFunc(DicMetodaPlatnosci element)
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        if (element.Nazwa.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        if (element.Opis != null && element.Opis.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        return false;
    }

    private async Task OpenDialog(DicMetodaPlatnosciDto metodaPlatnosci)
    {
        StateHasChanged();
        var currentId = GetIdFromMetoda(metodaPlatnosci);

        var parameters = new DialogParameters
        {
            ["Metoda"] = metodaPlatnosci,
            ["IsNew"] = currentId == 0
        };

        var options = new DialogOptions
        {
            CloseOnEscapeKey = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };

        var title = currentId > 0 ? "Edytuj metodę płatności" : "Dodaj nową metodę płatności";

        var dialog = await DialogService.ShowAsync<MetodaPlatnosciDialog>(title, parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            if (result.Data is DicMetodaPlatnosciDto updatedMetoda)
            {
                if (currentId > 0)
                {
                    var updateResult = await ApiService.MetodyPlatnosciRepo.MetodaPlatnosciPut(currentId, updatedMetoda);
                    if (updateResult.Data != null)
                    {
                        Snackbar.Add("Metoda płatności została zaktualizowana", Severity.Success);
                    }
                    else
                    {
                        Snackbar.Add("Błąd: " + updateResult.Error, Severity.Error);
                    }
                }
                else
                {
                    var createResult = await ApiService.MetodyPlatnosciRepo.MetodaPlatnosciPost(updatedMetoda);
                    if (createResult.Data != null)
                    {
                        Snackbar.Add("Metoda płatności została dodana", Severity.Success);
                    }
                    else
                    {
                        Snackbar.Add("Błąd: " + createResult.Error, Severity.Error);
                    }
                }
                await LoadData();
            }
        }
    }

    private int GetIdFromMetoda(DicMetodaPlatnosciDto metodaPlatnosci)
    {
        var existingRecord = _metodyPlatnosci.FirstOrDefault(m =>
            m.Nazwa == metodaPlatnosci.Nazwa &&
            m.Opis == metodaPlatnosci.Opis);

        return existingRecord?.MetodaPlatnosciId ?? 0;
    }

    private async Task DeleteConfirm(int id)
    {
        StateHasChanged();
        var parameters = new DialogParameters
        {
            ["ContentText"] = "Czy na pewno chcesz usunąć tę metodę płatności?"
        };

        var options = new DialogOptions
        {
            CloseOnEscapeKey = true,
            MaxWidth = MaxWidth.ExtraSmall
        };

        var dialog = await DialogService.ShowAsync<ConfirmDialog>("Potwierdź usunięcie", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await DeleteMetoda(id);
        }
    }

    private async Task DeleteMetoda(int id)
    {
        var result = await ApiService.MetodyPlatnosciRepo.MetodaPlatnosciDelete(id);
        if (result.Data)
        {
            Snackbar.Add("Metoda płatności została usunięta", Severity.Success);
            await LoadData();
        }
        else
        {
            Snackbar.Add("Błąd podczas usuwania: " + result.Error, Severity.Error);
        }
    }

    private DicMetodaPlatnosciDto MapToDto(DicMetodaPlatnosci model)
    {
        return new DicMetodaPlatnosciDto
        {
            Nazwa = model.Nazwa,
            Opis = model.Opis
        };
    }
}